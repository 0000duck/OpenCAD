<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OpenCAD.UI"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="local:NumberTextBox">
        <Setter Property="Template" Value="{DynamicResource NumberTextBox}"/>
    </Style>

    <Style x:Key="DropDownToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="Margin" Value="-1"/>
    </Style>

    <Style TargetType="local:ScalarPicker">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template" Value="{DynamicResource ScalarPickerTemplate}"/>
    </Style>
</ResourceDictionary>