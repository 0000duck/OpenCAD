<UserControl x:Name="userControl" x:Class="UserInterface.ConceptUI.Controls.StatusCountDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.ConceptUI.Controls"
             Width="auto" Height="auto">
    <WrapPanel>
        <Image Source="{Binding IconSource, ElementName=userControl}"
               MinWidth="20" MinHeight="20"/>
        <TextBlock Text="{Binding Count, ElementName=userControl}"/>
    </WrapPanel>
</UserControl>