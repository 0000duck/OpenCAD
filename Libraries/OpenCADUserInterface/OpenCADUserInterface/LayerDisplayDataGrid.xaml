<DataGrid x:Class="OpenCAD.UserInterface.LayerDisplayDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenCAD.UserInterface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DataGrid.Columns>
        <DataGridCheckBoxColumn Header="Visible" Binding="{Binding LayerVisible}"
                                CanUserResize="False"/>
        <local:DataGridColorColumn Header="Color" Binding="{Binding LayerColor}"/>
        <DataGridTextColumn Header="Label" Binding="{Binding LayerLabel}"
                            Width="*" CanUserResize="False"/>
    </DataGrid.Columns>
</DataGrid>
